<UserControl x:Class="SteamItemsStatsViewer.Views.DisplayItemDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamItemsStatsViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView ItemsSource="{Binding ItemsData}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding ItemData.Quantity}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding ItemData.Price}"/>
                    <GridViewColumn Header="Quantity Changed By" DisplayMemberBinding="{Binding QuantityChangedBy}"/>
                    <GridViewColumn Header="Price Changed By" DisplayMemberBinding="{Binding PriceChangedBy}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
