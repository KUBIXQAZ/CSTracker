<UserControl x:Class="SteamItemsStatsViewer.Views.DisplayItemDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:controls="clr-namespace:SteamItemsStatsViewer.Resources.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              Margin="0 0 0 20">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding ItemData.Name}"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="22"/>

            <Button Grid.Column="1" 
                    Command="{Binding RefreshDataCommand}" 
                    HorizontalAlignment="Right" 
                    Content="Refresh"/>

        </Grid>

        <controls:HorizontalScrollViewer Grid.Row="1"
                                         VerticalScrollBarVisibility="Disabled" 
                                         HorizontalAlignment="Center"
                                         HorizontalScrollBarVisibility="Hidden">

            <StackPanel Orientation="Horizontal">

                <Border Style="{StaticResource InfoBuble}" 
                        MinWidth="130">

                    <StackPanel>

                        <TextBlock Text="Quantity"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding CurrentQuantity}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}" 
                        MinWidth="130">

                    <StackPanel>

                        <TextBlock Text="Price" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding CurrentPrice}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

            </StackPanel>

        </controls:HorizontalScrollViewer>

        <controls:HorizontalScrollViewer Grid.Row="2"
                                         Margin="0 10 0 0" 
                                         VerticalScrollBarVisibility="Disabled" 
                                         HorizontalAlignment="Center" 
                                         HorizontalScrollBarVisibility="Hidden">

            <StackPanel Orientation="Horizontal">

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Price in last 7 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Price7Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Price in last 14 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Price14Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Price in last 30 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Price30Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Quantity in last 7 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Quantity7Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Quantity in last 14 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Quantity14Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

                <Border Style="{StaticResource InfoBuble}">

                    <StackPanel>

                        <TextBlock Text="Quantity in last 30 days" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="20"/>

                        <TextBlock Text="{Binding Quantity30Days}" 
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="18"/>

                    </StackPanel>

                </Border>

            </StackPanel>

        </controls:HorizontalScrollViewer>

        <Border Grid.Row="3" 
                Margin="0 10 0 0" 
                Background="{StaticResource SecondaryBackground}" 
                BorderBrush="Transparent" 
                BorderThickness="0" 
                CornerRadius="10">

            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <TextBlock Text="Price" 
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="26"
                           HorizontalAlignment="Center"/>

                <controls:HorizontalScrollViewer Grid.Row="1" 
                                                 Margin="40 0 0 0" 
                                                 VerticalScrollBarVisibility="Disabled" 
                                                 HorizontalScrollBarVisibility="Hidden">

                    <StackPanel Orientation="Horizontal">

                        <Button Content="Day" 
                                Margin="0 0 15 0" 
                                Command="{Binding DayTimeStampPriceChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="Week" 
                                Margin="0 0 15 0" 
                                Command="{Binding WeekTimeStampPriceChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="Month" 
                                Margin="0 0 15 0" 
                                Command="{Binding MonthTimeStampPriceChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="Year" 
                                Margin="0 0 15 0" 
                                Command="{Binding YearTimeStampPriceChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="All" 
                                Margin="0 0 15 0" 
                                Command="{Binding AllTimeStampPriceChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                    </StackPanel>

                </controls:HorizontalScrollViewer>

                <lvc:CartesianChart Grid.Row="2" 
                                    MinHeight="200" 
                                    Series="{Binding SeriesPrice}" 
                                    YAxes="{Binding YAxesPrice}"
                                    XAxes="{Binding XAxesPrice}" 
                                    ZoomMode="X"/>

            </Grid>

        </Border>

        <Border Grid.Row="4" 
                Margin="0 10 0 0" 
                Background="{StaticResource SecondaryBackground}" 
                BorderBrush="Transparent" 
                BorderThickness="0" 
                CornerRadius="10">

            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <TextBlock Text="Quantity" 
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="26"
                           HorizontalAlignment="Center"/>

                <controls:HorizontalScrollViewer Grid.Row="1" 
                                                 Margin="40 0 0 0" 
                                                 VerticalScrollBarVisibility="Disabled" 
                                                 HorizontalScrollBarVisibility="Hidden">

                    <StackPanel Orientation="Horizontal">

                        <Button Content="Day" 
                                Margin="0 0 15 0" 
                                Command="{Binding DayTimeStampQuantityChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>
                        <Button Content="Week" 
                                Margin="0 0 15 0" 
                                Command="{Binding WeekTimeStampQuantityChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="Month" 
                                Margin="0 0 15 0" 
                                Command="{Binding MonthTimeStampQuantityChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="Year" 
                                Margin="0 0 15 0" 
                                Command="{Binding YearTimeStampQuantityChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                        <Button Content="All" 
                                Margin="0 0 15 0" 
                                Command="{Binding AllTimeStampQuantityChartCommand}" 
                                Style="{StaticResource TimeStampChartButton}"/>

                    </StackPanel>

                </controls:HorizontalScrollViewer>

                <lvc:CartesianChart Grid.Row="2" 
                                    MinHeight="200" 
                                    Series="{Binding SeriesQuantity}" 
                                    YAxes="{Binding YAxesQuantity}" 
                                    XAxes="{Binding XAxesQuantity}" 
                                    ZoomMode="X"/>

            </Grid>

        </Border>

    </Grid>
</UserControl>