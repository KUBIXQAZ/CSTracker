<UserControl x:Class="CSTracker.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSTracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Grid.RowDefinitions>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="0 0 0 40">

            <Grid.RowDefinitions>

                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       FontWeight="Bold"
                       Text="My Profile"
                       FontSize="30"/>

            <TextBlock Grid.Row="1"
                       Foreground="{StaticResource TextSecondary}"
                       Width="305"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       Text="Welcome back! Here you can view and update your profile details."/>

            <Separator Grid.Row="2"
                       Margin="0 10 0 0"
                       Width="450"
                       HorizontalAlignment="Left"
                       Background="{StaticResource AccentColor}"/>

        </Grid>

        <Grid Grid.Row="1"
              Margin="0 0 0 40">

            <Grid.RowDefinitions>

                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="0 0 0 20">

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="auto"/>

                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Text="Email"
                           FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Enter your email address"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBox Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="1"
                         Text="{Binding Email, Mode=TwoWay}"
                         Width="250"/>

                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        Content="Update"
                        Command="{Binding UpdateEmailCommand}"
                        Margin="0 10 0 0"/>

            </Grid>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="auto"/>

                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Text="Username"
                           FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Enter your username"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBox Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="1"
                         Width="250"
                         Text="{Binding Username, Mode=TwoWay}"/>

                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        Content="Update"
                        Margin="0 10 0 0"
                        Command="{Binding UpdateUsernameCommand}"/>

            </Grid>

        </Grid>

        <Grid Grid.Row="2">

            <Grid.RowDefinitions>

                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
                       Text="Change password"
                       FontWeight="Bold"/>

            <TextBlock Grid.Row="1"
                       Text="You can change your password for security reasons."
                       Width="200"
                       Foreground="{StaticResource TextSecondary}"
                       HorizontalAlignment="Left"
                       TextWrapping="Wrap"/>

            <Separator Grid.Row="2"
                       Margin="0 10 0 0"
                       Width="450"
                       HorizontalAlignment="Left"
                       Background="{StaticResource AccentColor}"/>

            <Grid Grid.Row="3"
                  Margin="0 30 0 0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="250"/>

                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Text="Current password"
                           FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Enter your current password here"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBox Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="1"/>

            </Grid>

            <Grid Grid.Row="4"
                  Margin="0 20 0 0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="auto"/>

                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Text="New password"
                           FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Enter your new password here"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBox Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="1"
                         Width="250"/>

            </Grid>

            <Grid Grid.Row="5"
                  Margin="0 20 0 0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="250"/>

                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Text="Confirm new password"
                           FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Enter your new password here"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBox Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="1"/>

            </Grid>

            <Grid Grid.Row="6"
                  Width="450"
                  HorizontalAlignment="Left">

                <Button HorizontalAlignment="Right"
                        Content="Update"
                        Margin="0 10 0 0"/>

            </Grid>

        </Grid>

        <Grid Grid.Row="3"
              Margin="0 40 0 0">

            <Grid.RowDefinitions>

                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Logout"
                       FontWeight="Bold"/>

            <TextBlock Grid.Row="1"
                       Text="Click the button below to safely sign out of your account."
                       Foreground="{StaticResource TextSecondary}"
                       Width="200"
                       HorizontalAlignment="Left"
                       TextWrapping="Wrap"/>

            <Separator Grid.Row="2"
                       Margin="0 10 0 0"
                       Width="450"
                       HorizontalAlignment="Left"
                       Background="{StaticResource AccentColor}"/>

            <Button Grid.Row="3" 
                    Margin="0 10 0 0"
                    HorizontalAlignment="Left"
                    Content="Logout"
                    Command="{Binding LogoutCommand}"/>

        </Grid>
        
    </Grid>
    
</UserControl>
