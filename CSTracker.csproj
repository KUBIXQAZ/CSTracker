<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\Images\favicon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Images\favicon.ico" />
    <None Remove="Resources\Images\sort.png" />
    <None Remove="Resources\Images\sort_hover.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\Images\favicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\favicon.ico" />
    <Resource Include="Resources\Images\sort_hover.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LiveChartsCore.SkiaSharpView.WPF" Version="2.0.0-rc2" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3179.45" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.8.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\sort.png" />
  </ItemGroup>

</Project>
